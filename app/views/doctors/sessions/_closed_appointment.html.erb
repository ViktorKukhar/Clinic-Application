<div class="container py-5">
  <h1 class="border-bottom pt-4">Closed appointments</h1>
  <div class="row row-cols-1 row-cols-md-3 mb-3 text-center">
    <% @doctor.appointments.where(open: false).each do |appointment,user| %>
        <div class="col">
          <div class="card mb-4 rounded-3 shadow-sm">
            <div class="card-header py-3">
              <h4 class="my-0 fw-normal"><%= appointment.user.full_name%></h4>
            </div>
            <div class="card-body">
              <ul class="list-unstyled mt-3 mb-4">
                <li class="h5">Wait you at: </li>
                <li class="h5"> <%= appointment.date %></li>
                <li class="h5"> <%= appointment.recommendation %></li>
              </ul>

            </div>
          </div>
        </div>
      <% end %>
    </div>
</div>
