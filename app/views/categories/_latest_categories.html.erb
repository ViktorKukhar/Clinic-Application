<div class="container px-4 py-5" id="hanging-icons">
    <h2 class="pb-2 border-bottom">Categories:</h2>
    <div class="row g-4 py-5 row-cols-1 row-cols-lg-3">
      <% @categories.each do |category| %>
      <div class="col d-flex align-items-start">
        <div>
          <h3 class="fs-2"><%= category.name %></h3>
          <p><%= category.description %></p>
          <div class="btn-group">
            <%= link_to "Appointment", new_appointment_path, class: "btn btn-sm btn-outline-secondary" %>
            <%= link_to "Doctors", category_path(category), class: "btn btn-sm btn-outline-danger" %>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
